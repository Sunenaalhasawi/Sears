<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/avantgarde_bold"
            android:text="@string/verify_email"
            android:textColor="@color/bright_blue"
            android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/avantgarde_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/check_mail_to_reset_pswd"
                    android:textColor="@color/cart_grey"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView105"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_verify_email"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_gradient_rounded_rectangle_12dp"
                    android:fontFamily="@font/avantgarde_bold"
                    android:padding="16dp"
                    android:text="@string/verify_email"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/avantgarde_bold"
            android:text="test@gmail.com"
            android:textColor="@color/bright_blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tvtimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvtimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/avantgarde_bold"
                    android:text="1:00"
                    android:textColor="@color/txt_dark_yellow"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_verify_email"
                    app:layout_constraintEnd_toEndOf="@+id/textView105"
                    app:layout_constraintStart_toStartOf="@+id/textView105" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_sears" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>