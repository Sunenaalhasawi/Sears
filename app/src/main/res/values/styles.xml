    <style name="SearsAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/app_blue</item>
        <item name="colorAccent">@color/app_blue</item>
        <item name="windowActionBar">false</item>
        <item name="actionMenuTextColor">@color/txt_clr_blue</item>
        <item name="android:actionMenuTextColor">@color/txt_clr_blue</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="AppTheme.NoActionBar">-->
